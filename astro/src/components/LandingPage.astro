---
const items = [
  { color: 'bg-red-500', headline: 'Item 1', description: 'This is item 1 description' },
  { color: 'bg-blue-500', headline: 'Item 2', description: 'This is item 2 description' },
  { color: 'bg-green-500', headline: 'Item 3', description: 'This is item 3 description' },
  { color: 'bg-yellow-500', headline: 'Item 4', description: 'This is item 4 description' },
  { color: 'bg-purple-500', headline: 'Item 5', description: 'This is item 5 description' },
  { color: 'bg-pink-500', headline: 'Item 6', description: 'This is item 6 description' },
];
---

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
  {items.map(item => (
    <div class="flex flex-col items-center text-center p-4 border rounded-lg shadow-sm">
      <div class={`w-16 h-16 rounded-full ${item.color} mb-4`}></div>
      <h3 class="text-lg font-semibold mb-2">{item.headline}</h3>
      <p class="text-sm text-gray-600">{item.description}</p>
    </div>
  ))}
</div>