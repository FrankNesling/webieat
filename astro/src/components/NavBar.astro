---
const links = [
  { label: 'Home', href: '' },
  { label: 'Blog', href: '/blog/' },
  { label: 'About', href: '/about/' },
];
---

<nav class="top-nav">
  <div class="container">
    <a href="/" class="logo">Webie.at</a>

    <ul class="nav-links">
      {links.map(link => (
        <li>
          <a href={link.href}>{link.label}</a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<style>
  .top-nav {
    width: 100%;
    background: #FDD8C8; 
    border-bottom: 1px solid #fff;
    position: fixed;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    font-weight: 800;
    text-decoration: none;
    color: #C10A49;
    font-size: 1.6rem;
  }

  .nav-links {
    list-style: none;
    display: flex;
    gap: 1.5rem;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    text-decoration: none;
    font-size: 1.25rem;
    color: #9D9D9D;
    font-weight: 700;
  }

  .nav-links a:hover {
    text-decoration: underline;
  }
</style>
