---
import SkillItem from './SkillItem.astro';
import type { Skill } from '../pages/LandingPage.astro';

const { skillTopic, items} = Astro.props as {
  skillTopic: string;
  items: Skill[];
};

---

<div>
  <h2 class="ml-15 text-2xl font-bold mb-2">{skillTopic}</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 my-12">
    {items.map(item => (
      <SkillItem item={item} />
        ))}
  </div>
</div>