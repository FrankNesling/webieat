---
import type { ImageMetadata } from 'astro';

const { item } = Astro.props;

const logoSVGs = import.meta.glob<ImageMetadata>('../assets/*.svg', {
  eager: true,
  import: 'default',
});
const logoSVG = logoSVGs[`../assets/${item.data.headline}.svg`];

---

<div class="flex flex-col items-center text-center p-4">
    <div class={`w-16 h-16 rounded-full ${item.data.color} mb-4`} style={`background-image: url(${logoSVG.src})`}></div>
    <h3 class="text-lg font-semibold mb-2">{item.data.headline}</h3>
    <p class="text-sm text-gray-600">{item.data.description}</p>
</div>